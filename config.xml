<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id        = "it.pendoliamo.mobile"
        version   = "0.5.1">

	<name>Pendoliamo</name>

	<description>
		Il mini social network dei pendolari del treno!
	</description>

	<author href="http://www.pendoliamo.it" email="info@pendoliamo.it">
		Pendoliamo
	</author>

	<preference name="phonegap-version" value="3.5.0" />
	<preference name="orientation" value="default" />
	<preference name="fullscreen" value="false" />
	<preference name="webviewbounce" value="true" />
	<preference name="permissions" value="none"/>

	<access origin="*" browserOnly="true" />

	<icon src="icon.png" />
	<icon src="apple-touch-icon-57x57.png" width="57" height="57" />
	<icon src="apple-touch-icon-72x72.png" gap:platform="ios" width="72" height="72" />
	<icon src="apple-touch-icon-114x114.png" width="114" height="114" />
</widget>
